<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/setting_check_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_check_title"
            android:textColor="@color/setting_profile_skyblue"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/setting_check_exit_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/exit_btn"
            android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/setting_check_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_check_title_tv"
            />

        <TextView
            android:id="@+id/setting_check_explain_01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_check_explain_01"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_check_title_tv"/>

        <TextView
            android:id="@+id/setting_check_explain_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_check_explain_02"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_check_explain_01_tv"/>

        <EditText
            android:id="@+id/setting_check_password_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/setting_profile_gray"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toBottomOf="@id/setting_check_explain_02_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_check_ok_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@id/setting_check_password_et"
            app:layout_constraintStart_toStartOf="@id/setting_check_password_et"
            app:layout_constraintEnd_toEndOf="@id/setting_check_password_et">

            <Button
                android:id="@+id/setting_check_ok_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/setting_profile_skyblue"
                android:text="@string/profile_check_ok"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>