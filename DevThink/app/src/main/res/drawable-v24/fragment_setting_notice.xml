<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/setting_notice_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notice_title"
            android:textSize="20sp"
            android:textColor="@color/setting_profile_skyblue"
            android:textStyle="bold"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/setting_notice_exit_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/exit_btn"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/setting_notice_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_title_tv"
            />

        <TextView
            android:id="@+id/setting_notice_allow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notice_allow"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/setting_notice_title_tv"
            app:layout_constraintTop_toBottomOf="@id/setting_notice_title_tv"/>

        <ImageView
            android:id="@+id/setting_notice_allow_btn_on"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_on"
            app:layout_constraintTop_toTopOf="@id/setting_notice_allow_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_allow_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/setting_notice_allow_btn_off"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_off"
            app:layout_constraintTop_toTopOf="@id/setting_notice_allow_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_allow_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/setting_notice_sound_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sound"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/setting_notice_title_tv"
            app:layout_constraintTop_toBottomOf="@id/setting_notice_allow_tv"/>

        <ImageView
            android:id="@+id/setting_notice_sound_btn_on"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_on"
            app:layout_constraintTop_toTopOf="@id/setting_notice_sound_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_sound_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/setting_notice_sound_btn_off"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_off"
            app:layout_constraintTop_toTopOf="@id/setting_notice_sound_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_sound_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/setting_notice_badge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bagde"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/setting_notice_title_tv"
            app:layout_constraintTop_toBottomOf="@id/setting_notice_sound_tv"/>

        <ImageView
            android:id="@+id/setting_notice_badge_btn_on"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_on"
            app:layout_constraintTop_toTopOf="@id/setting_notice_badge_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_badge_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/setting_notice_badge_btn_off"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_off"
            app:layout_constraintTop_toTopOf="@id/setting_notice_badge_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_badge_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/setting_notice_preview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preview"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/setting_notice_title_tv"
            app:layout_constraintTop_toBottomOf="@id/setting_notice_badge_tv"/>

        <ImageView
            android:id="@+id/setting_notice_preview_btn_on"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_on"
            app:layout_constraintTop_toTopOf="@id/setting_notice_preview_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_preview_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/setting_notice_preview_btn_off"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_off"
            app:layout_constraintTop_toTopOf="@id/setting_notice_preview_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_preview_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/setting_notice_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chatting"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/setting_notice_title_tv"
            app:layout_constraintTop_toBottomOf="@id/setting_notice_preview_tv"/>

        <ImageView
            android:id="@+id/setting_notice_chat_btn_on"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_on"
            app:layout_constraintTop_toTopOf="@id/setting_notice_chat_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_chat_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/setting_notice_chat_btn_off"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/notice_off"
            app:layout_constraintTop_toTopOf="@id/setting_notice_chat_tv"
            app:layout_constraintBottom_toBottomOf="@id/setting_notice_chat_tv"
            app:layout_constraintEnd_toEndOf="@id/setting_notice_exit_iv"
            android:visibility="visible"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>