<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="리뷰 작성하기"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/reviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:hint="제목을 입력하세요"
            android:padding="10dp"
            android:background="@drawable/background_sky_sky_blue"
            app:layout_constraintTop_toBottomOf="@id/best"
            android:singleLine="true"/>


        <EditText
            android:id="@+id/reviewContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:hint="이 책을 통해"
            android:padding="10dp"
            android:background="@drawable/background_sky_sky_blue"
            app:layout_constraintBottom_toTopOf="@id/reviewScore"
            app:layout_constraintTop_toBottomOf="@id/reviewTitle"/>

        <TextView
            android:id="@+id/reviewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평점"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/reviewContent"
            app:layout_constraintStart_toStartOf="@id/reviewContent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
