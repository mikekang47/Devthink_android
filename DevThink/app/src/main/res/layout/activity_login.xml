<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registration.LoginActivity">

<!--        <androidx.fragment.app.FragmentContainerView-->
<!--            android:id="@+id/loginFragmentContainerView"-->
<!--            android:name="androidx.navigation.fragment.NavHostFragment"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            app:defaultNavHost="true"-->
<!--            app:navGraph="@navigation/registration_nav_graph" />-->

            <Button
                android:id="@+id/login_email_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/skyblue"
                android:text="@string/login_email"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/login_email_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="text"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/login_email_btn"
                app:layout_constraintStart_toStartOf="@id/login_email_btn" />

            <View
                android:id="@+id/login_email_under_view"
                android:layout_width="0dp"
                android:layout_height="10px"
                android:background="@color/skyblue"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/login_email_et"
                app:layout_constraintStart_toStartOf="@id/login_email_btn"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/login_pw_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/skyblue"
                android:text="@string/login_password"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/login_email_under_view"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/login_pw_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/login_pw_btn"
                app:layout_constraintStart_toStartOf="@id/login_pw_btn" />

            <View
                android:id="@+id/login_pw_under_view"
                android:layout_width="0dp"
                android:layout_height="10px"
                android:background="@color/skyblue"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/login_pw_et"
                app:layout_constraintStart_toStartOf="@id/login_pw_btn"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/login_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_save"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toBottomOf="@id/login_pw_under_view"
                app:layout_constraintStart_toStartOf="@id/login_email_under_view" />

            <ImageView
                android:id="@+id/login_checkbox_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/login_checkbox"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="@id/login_save_tv"
                app:layout_constraintBottom_toBottomOf="@id/login_save_tv"
                app:layout_constraintEnd_toStartOf="@id/login_save_tv" />

            <Button
                android:id="@+id/login_go_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/opening_skyblue"
                android:text="@string/login_go"
                android:layout_margin = "20dp"
                app:layout_constraintTop_toBottomOf="@id/login_save_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>