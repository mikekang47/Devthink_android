<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <View
        android:id="@+id/community_content_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/community_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/community_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_content_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="@id/community_content_view"
        app:layout_constraintStart_toStartOf="@id/community_content_view"/>

    <ImageView
        android:id="@+id/community_album_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/album"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/community_title_tv"
        app:layout_constraintTop_toTopOf="@id/community_title_tv" />

    <TextView
        android:id="@+id/community_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_date"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/community_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/community_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/community_like_num"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/community_like_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/heart_on"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toStartOf="@id/community_like_tv"
        app:layout_constraintTop_toTopOf="@id/community_like_tv"
        app:layout_constraintBottom_toBottomOf="@id/community_like_tv"/>

    <TextView
        android:id="@+id/community_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_nickname"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toTopOf="@id/community_like_tv"
        app:layout_constraintEnd_toStartOf="@id/community_like_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>