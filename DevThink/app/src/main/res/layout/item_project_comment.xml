<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/item_project_profile_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile" 
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    
    <TextView
        android:id="@+id/item_project_apply_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_comment_nickname"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/item_project_profile_iv"
        app:layout_constraintTop_toTopOf="@id/item_project_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_project_profile_iv"/>
    
    <TextView
        android:id="@+id/item_project_apply_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_comment_content"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/item_project_apply_nickname_tv"
        app:layout_constraintTop_toTopOf="@id/item_project_apply_nickname_tv"/>

    <ImageView
        android:id="@+id/item_project_apply_heart_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart_on"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_project_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_project_profile_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>